[Unit]
Description = Cart Service
[Service]
User=roboshop
Environment=REDIS_HOST={{ lookup('amazon.aws.aws_ssm', 'dev.redis_host', region='us-east-1') }}
Environment=CATALOGUE_HOST={{ lookup('amazon.aws.aws_ssm', 'dev.catalogue_host', region='us-east-1') }}
ExecStart=/bin/node /app/server.js
SyslogIdentifier=cart

[Install]
WantedBy=multi-user.target